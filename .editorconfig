# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.{html}]
indent_style = space
indent_size = 4
format_on_save  = true

[*.{js,json}]
indent_style = space
indent_size = 2
format_on_save  = true
